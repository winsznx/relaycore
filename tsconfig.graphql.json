{
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./src",
        "module": "ESNext",
        "moduleResolution": "node",
        "target": "ES2022",
        "lib": [
            "ES2022"
        ],
        "esModuleInterop": true,
        "skipLibCheck": true,
        "strict": false,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": false,
        "sourceMap": true,
        "noEmitOnError": false
    },
    "include": [
        "src/api/**/*",
        "src/services/**/*",
        "src/types/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "src/lib",
        "src/components",
        "src/pages",
        "src/hooks",
        "**/*.test.ts",
        "**/*.spec.ts",
        "**/*.tsx"
    ]
}